//- extends layout
//- block content
    h1= title
    p Welcome to #{title}
    form(action="/",method="POST")
     input(name="lead_email", type="email", placeholder="Enter your email address")
      button(type="submit") Submit
    if leads 
      h1 Leads
      for lead in leads
        p(id=lead.id) 
          span #{lead.email} 
          | 
          a(href="/lead/" + lead.id) Details 
          |  
          button(onclick=`deleteLead('${lead.id}')`) Delete
doctype html
html(lang='en')
  include common/head.jade
  +head("Starter MVP")
  body
    header 
      include common/navbar.jade
      +navbar()
      .container
        .row
          .col-md-6
            h1.mb-3 Minimum Viable Landing Page
            p.lead This tutorial teaches you how to build a NodeJS web application covering key topics.
            p.lead.mb-4 Learn how to launch a landing page and start collecting sales leads.  
            form(action="/", method="POST")
              .input-group.mb-3
                input(name="lead_email", type="email", placeholder="Enter your email address").form-control
                .input-group-append
                  button(type="submit").btn.btn-primary Get Started  
        .row
          .col-md-6    
            if leads
              h1 Leads
              table.table
                thead
                  tr
                    th(scope="col") Email
                    th(scope="col") Actions
                    th(scope="col")
                  tr
                tbody                
                  for lead in leads
                    tr(id=lead.id)
                      td
                        span #{lead.email}
                      td
                        a(href="/lead/" + lead.id) Details
                      td 
                        button(onclick=`deleteLead('${lead.id}')`).btn.btn-primary Delete


    script(src='https://code.jquery.com/jquery-3.2.1.min.js')
    include common/footer.jade
    +footer()
    script(src='/javascripts/leads.js')

